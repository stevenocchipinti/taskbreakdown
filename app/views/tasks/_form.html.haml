= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name
  = f.text_area :description
  = f.range_field :percentage_complete, min: 0, max: 1, step: 0.05
  = f.hidden_field :parent_id, value: params[:parent_id] if params[:parent_id]
  = f.submit 'Save', :class => "button-main"

- content_for :title_left do
  = link_to "Back", back_path(@task), :class => "button-prev"
